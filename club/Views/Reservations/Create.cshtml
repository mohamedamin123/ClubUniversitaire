@model club.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create Reservation</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="timeDeb" class="control-label"></label>
                <input asp-for="timeDeb" class="form-control" />
                <span asp-validation-for="timeDeb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="timeFin" class="control-label"></label>
                <input asp-for="timeFin" class="form-control" />
                <span asp-validation-for="timeFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reservedBy" class="control-label"></label>
                <input asp-for="reservedBy" class="form-control" />
                <span asp-validation-for="reservedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clubName" class="control-label"></label>
                <input asp-for="clubName" class="form-control" />
                <span asp-validation-for="clubName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
